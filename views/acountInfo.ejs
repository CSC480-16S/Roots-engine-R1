                </div>
                <div class="newAccountInfo">
                    <label><span class="req"></span></label>
                    <input name='birthCity' type="text" maxlength="64" required autocomplete="off" value="{{birthcity}}"
                           placeholder="Birth City"/>
                </div>

                <div class="newAccountInfo">
                    <label><span class="req"></span></label>
                    <input name='birthCity' type="text" maxlength="64" required autocomplete="off" value="{{birthday}}"
                           placeholder="Birth Country"/>
                </div>
                <div class="newAccountInfo">
                    <label><span class="req"></span></label>
                    <input name='birthCity' type="text" maxlength="64" required autocomplete="off" value="{{birthday}}"
                           placeholder="Birthday"/>
                </div>
                <div class="newAccountInfo">
                    <textarea id="personalbio" onkeyup="counter(this, this.maxLength)" maxlength="5000" class="textareaclass" rows="4" value="{{bio}}"
                              placeholder="Bio"></textarea>
                    <div align="right" id="num">5000 characters remaining</div>
                </div>

                <script>
                    function counter(txtarea, l){
                        var len = $(txtarea).val().length;
                        if (len <= l) $('#num').text((l - len) + ' characters remaining');
                    }
                </script>

