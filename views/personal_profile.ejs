<!DOCTYPE html>
<html lang="en" ng-app="">

<head>
    <meta charset="UTF-8">
    <title>Personal Profile</title>
    <link href='https://fonts.googleapis.com/css?family=Andada' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:500italic,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="styles/normalize.css">
    <link rel="stylesheet" href="styles/style.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">


</head>

<body>

<header>
    <a href="/" class="header-logo">
        <img id="logo-img" src="images/logo.png">
    </a>
</header>
    <div class="form wideForm">
        <div id="Profile Info">
            <form action="/updateProfile" method="post">
            <h1>Complete Your Profile</h1>
                <div class="leftForm">


                        <div class="top-row">
                    <h2>Date of Birth <span class="req" >*</span></h2>
                    <div class="field-wrap">
                        <input name='dateOfBirth' type="date" placeholder="mm/dd/yyyy" required autocomplete="off" />
                    </div>

                    <div class="field-wrap">
                        <label><span class="req"></span></label>
                        <select name='gender' required>
                             <option value="" disabled selected>Gender</option>
                             <option value="male">Male</option>
                             <option value="female">Female</option>
                             <option value="trans">Transgender</option>
                             <option value="none">Prefer No Label</option>
                             <option value="diffent">Prefer Different Label</option>
                             <option value="nodisclose">Prefer Not to Disclose</option>
                        </select>
                    </div>
                </div>

                <div class="field-wrap">
                    <label>City of Birth<span class="req">*</span></label>
                    <input name='birthCity' type="text" maxlength="64"  required autocomplete="off" />
                </div>

                <div class="field-wrap">
                    <label>State of Birth<span class="req">*</span></label>
                    <input name='birthState' type="text" maxlength="64" required autocomplete="off" />
                </div>

                <div class="field-wrap">
                    <label>Country of Birth<span class="req">*</span> </label>
                    <input name='birthCountry' type="text" maxlength="128"  required autocomplete="off" />
                </div>

                </div>


<div class="rightForm">

                <h2>Short Personal Biography</h2>
                <div class="field-wrap">

                    <textarea name="personalbio" id="personalbio" onkeyup="counter(this, this.maxLength)" maxlength="5000" class="textareaclass" rows="4"></textarea>
                    <div align="right" id="num">5000 characters remaining</div>
                </div>

                <script>
                    function counter(txtarea, l){
                        var len = $(txtarea).val().length;
                        if (len <= l) $('#num').text((l - len) + ' characters remaining');
                    }
                </script>

                <input  type="file" onchange="previewFile()" name="image"><br>
                <img class="blank" src="" height="200"  alt="Image preview">

                <script>
                    function previewFile(){
                        var preview = document.querySelector('img.blank'); //selects the query named img
                        var file    = document.querySelector('input[type=file]').files[0]; //sames as here
                        var reader  = new FileReader();

                        reader.onloadend = function(){
                            preview.src = reader.result;
                        }

                        if (file) {
                            reader.readAsDataURL(file); //reads the data as a URL
                        } else {
                            preview.src = "";
                        }
                    }

                    previewFile();  //calls the function named previewFile()
                </script>

        </div>
            <button type="submit" class="button button-block" id="wideButton"> View Your Tree</button>
        </form>
    </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
